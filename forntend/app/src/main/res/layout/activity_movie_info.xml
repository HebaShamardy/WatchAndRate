<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc4c4c4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7e008138"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ff008138"

                >

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_editor_format_list_bulleted" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/menu_btn"
                    android:layout_toRightOf="@+id/back_btn"
                    android:layout_toStartOf="@+id/menu_btn"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="10dp"
                    android:text="Details and reviews "


                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/menu_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="Sign in"
                    android:textStyle="normal"
                    android:background="@drawable/add"
                    android:scaleType="center"
                    android:textAllCaps="false"
                    android:layout_below="@+id/password_login"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="180dp"
                android:orientation="vertical"
                android:background="#7e008138"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/movie_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_image" />

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/movie_img"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/movie_img"
                    android:layout_toRightOf="@+id/movie_img"
                    android:text="Movie_name"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/movie_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_title"
                    android:layout_marginLeft="5dp"

                    android:layout_toEndOf="@+id/movie_img"
                    android:layout_toRightOf="@+id/movie_img"
                    android:text="Year "
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/vote_count"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:text="vote : 1207"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/vote_avg"
                    android:layout_toRightOf="@+id/movie_img"
                    android:layout_toEndOf="@+id/movie_img" />


                <TextView
                    android:id="@+id/vote_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingTop="5dp"

                    android:text="average : 5.5"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:layout_above="@+id/imageView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_img"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/line_white"
                    android:id="@+id/imageView" />

            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="#7e008138"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/menu_btn"
                    android:layout_toRightOf="@+id/back_btn"
                    android:layout_toStartOf="@+id/menu_btn"
