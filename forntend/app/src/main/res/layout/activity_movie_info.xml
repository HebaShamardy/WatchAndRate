                    android:layout_width="150dp"
                    android:layout_height="33dp"
                    android:text="Rate "
                    android:textColor="#ffffff"
                    android:textAllCaps="false"

                    android:background="@drawable/button_box"
                    android:layout_below="@+id/login_button"
